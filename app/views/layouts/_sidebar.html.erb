<% if current_user.present? %>
  <div class="mx-auto flex items-start">
    <div style="padding: 1rem;">
      <aside class="bg-gray-200 h-96 p-4">
        <div class="flex items-center justify-center mb-4">
          <a href="/" class="flex items-center">
            <div class="ml-4 mt-8">
              <img alt="Thumbnail for version as of 15:28, 11 May 2016" src="//upload.wikimedia.org/wikipedia/commons/thumb/archive/2/2a/20160511182000%21Instagram_logo.svg/120px-Instagram_logo.svg.png" decoding="async" loading="lazy" width="120" height="34" data-file-width="792" data-file-height="225">
            </div>
          </a>
        </div>
        <div class="flex justify-center mb-4 mt-4">
          <%= render 'layouts/search' %>
        </div>

        <div class="mb-10 mt-4 mr-4">
          <% if current_user == @user %>
            <%= link_to messages_path(@user), class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black focus:outline-none focus:ring-2 focus:ring-offset-2 flex items-center" do %>
              <%= image_tag("send_icon.svg", class: "mr-2") %> Сообщения
            <% end %>
          <% end %>
        </div>

        <div class="mb-4 mt-4">
          <% if current_user == @user %>
            <%= link_to new_post_path, class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black focus:outline-none focus:ring-2 focus:ring-offset-2 flex items-center" do %>
              <%= image_tag("plus_icon.svg", class: "mr-4") %> Создать
            <% end %>
          <% end %>
        </div>

        <div class="mb-4 mt-4">
          <%= link_to 'Выйти', destroy_user_session_path, data: { "turbo-method": :delete }, class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black focus:outline-none focus:ring-2 focus:ring-offset-2 flex items-center" %>
        </div>
      </aside>
    </div>
    <div class="vertical-line" style="border-left: 1px solid #D1D5DB; height: 100%;"></div>
  </div>
<% end %>
