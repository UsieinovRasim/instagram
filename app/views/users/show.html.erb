<% if user_signed_in? %>
  <%= @user.username %> <br>
  <%= @user.posts.count %> <br>
  <%= @user.fullname %> <br><br>

  <%= link_to 'Редактировать профиль', edit_user_path(@user), class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %> <br><br>

  <%= link_to 'Создать пост', new_post_path(@post), class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

  <div class="my-6">
    <table class="table-auto w-full">
      <thead>
      <tr>
        <th class="py-2 px-4 bg-gray-100 border-b border-gray-200">№</th>
        <th class="py-2 px-4 bg-gray-100 border-b border-gray-200">Описание</th>
      </tr>
      </thead>
      <tbody>
      <% @user.posts.each do |post| %>
        <tr>
          <td class="border px-4 py-2"><%= link_to post.id, post %></td>
          <td class="border px-4 py-2"><%= post.description %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
