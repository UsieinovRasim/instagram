<%= form_with(model: user, local: true, class: "w-full max-w-md mx-auto") do |form| %>

  <div class="mb-4">
    <%= form.label :website, 'Сайт', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :website, placeholder: 'Сайт', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :about_myself, 'О себе', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :about_myself, placeholder: 'О себе', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :gender, 'Пол', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :gender, User::GENDER_OPTIONS, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4 flex justify-end">
    <%= form.submit 'Отправить', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>

<% end %>
